.site-title__photo
  border-radius 100%
  margin-top 2.75em
  max-height 200px

.site-title__heading
  margin-bottom 0
  font-size 3.75rem

.site-title__leading-paragraph
  font-size 2rem
  line-height 1.3
  margin-top 0

  a
    padding-bottom 3px
    border-bottom 2px solid transparent

    &, &:link, &:visited
      text-decoration none

    &:focus, &:hover
      border-bottom-color $color-brand-primary
